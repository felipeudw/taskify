{
  "info": {
    "name": "Taskify API",
    "_postman_id": "taskify-api-collection",
    "description": "API collection for Taskify (Auth, Boards, Tasks)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Boards",
      "item": [
        {
          "name": "Get Boards",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "http://localhost:3000/boards",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["boards"]
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Get Tasks by Board",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "http://localhost:3000/tasks/{{boardId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["tasks", "{{boardId}}"]
            }
          }
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"boardId\": \"{{boardId}}\",\n  \"title\": \"My Task\",\n  \"priority\": \"medium\",\n  \"column\": \"inbox\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/tasks",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["tasks"]
            }
          }
        },
        {
          "name": "Update Task Column",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"column\": \"today\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/tasks/{{taskId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["tasks", "{{taskId}}"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "token", "value": "" },
    { "key": "boardId", "value": "" },
    { "key": "taskId", "value": "" }
  ]
}
