generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  boards    Board[]
  tasks     Task[]
  createdAt DateTime @default(now())
}

model Board {
  id        String   @id @default(uuid())
  name      String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  tasks     Task[]
  createdAt DateTime @default(now())
}

model Task {
  id        String   @id @default(uuid())
  title     String
  priority  String
  done      Boolean  @default(false)
  order     Int      @default(0)
  column    String
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
